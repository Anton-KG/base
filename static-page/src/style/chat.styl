.DocumentChat
  background mainWhiteColor
  height 100%
  overflow initial !important
  > .chatContent
    height calc(100% - 3em)
    overflow auto
    background #FEFEFE
    cursor default
    padding 0.25em
    > p
      margin 0.25em
      padding 0.5em
      background-color mainWhiteColor
      border-radius 0.75em
      display block
      word-break break-word
      word-wrap break-word
      position relative
      min-height 3em
      margin-left 3.25em
      font-size 14px
      font-weight 200
      &.logo:after
        content ''
        top -8px
        right 100%
        position absolute
        border 0 solid
        display block
        width 12px
        height 15px
        border-bottom-left-radius 85%
        box-shadow 2px 10px 0px -2px mainWhiteColor
        background-color transparent
      &:not(.logo) .messageAuthor
        display none
      &.logo .messageAuthor
        display block
        position absolute
        right 102%
        top 0
        border-radius 100%
        width 3em
        height 3em
        background mainGrayColor
        text-align center
        > img
          border-radius 100%
          height 3em
          max-width 3em
      .messageDelete
        display none
        height 100%
        width 15%
        right 0
        position absolute
        top 0
        border-radius 0.75em
        opacity 0
        cursor pointer
        transition opacity 0.5s ease-in-out
        &:hover
          opacity 0.75
        > i
          position absolute
          top 50%
          left 50%
          margin -0.5em 0 0 -0.5em
      &.authorMessage
        background-color blue-50
        margin-left 0
        margin-right 3.25em
        border-radius 0.75em
        .messageDelete
          display block
        &:after
          right inherit
          left 100%
          box-shadow -2px 10px 0px -2px blue-50
          border-bottom-right-radius 85%
          border-bottom-left-radius 0
        .messageAuthor
          left 102%
          right inherit
      .message
        display block
        margin-bottom 1em
        clear both
      .messageTime
        position absolute
        right 0.5em
        bottom 0.5em
        display inline-block
        text-align right
        color darkGrayColor
        font-size 0.75em
  > .chatControls
    width 100%
    height 2em
    padding 0.25em 0
    border-top 1px solid alt2GrayColor
    > .chatSend
      float right
      height 100%
      padding 0.25em 0.5em
      margin-right 0.25em
    > .chatInput
      height 100%
      width calc(100% - 2.8em)
      max-width calc(100% - 2.8em)
      max-height 100%
      min-width calc(100% - 2.8em)
      min-height 100%
      margin-left 0.25em
      border-radius 2px
      border 1px solid alt2GrayColor
      box-sizing border-box
      resize none
      padding-top 5px
      transition all 0.3s ease-in-out 0s
      &:focus
        outline 0
        border-color greenColor